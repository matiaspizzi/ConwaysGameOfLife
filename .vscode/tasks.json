{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build",
            "command": "<path to gcc.exe>",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}\\SDL2\\include\\SDL2",
                "-L${workspaceFolder}\\SDL2\\lib",
                "funciones.c",
                "precargas.c",
                "main.c",
                "-o",
                "main.exe",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}
